@model List<MVCClasico.ViewModels.CartItem>

@{
    ViewData["Title"] = "Carrito";
    Layout = "_Layout";
}

<h2>Carrito</h2>

@if (!Model.Any())
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio unitario</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.PrecioUnitario.ToString("C")</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
