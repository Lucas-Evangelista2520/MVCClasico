@model MVCClasico.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- ①  aseguramos multipart/form-data -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <!-- ②  resto de campos sin cambios -->
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="talle" class="control-label"></label>
                <input asp-for="talle" class="form-control" />
                <span asp-validation-for="talle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenFile" class="control-label">Imagen (opcional)</label>
                <input asp-for="ImagenFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
                @if (Model.imagen != null)
                {
                    <div>
                        <p>Imagen actual:</p>
                        <img src="~/public/@Model.imagen" alt="Imagen actual" style="max-width: 200px;" />
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
